@model IEnumerable<OrderSelectVM>

<a asp-action="Create" class="btn btn-primary">Yeni Siparis</a>
<div class="card">
    <div class="card-header">
        <h3>Siparis Listesi</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
            <tr>
                    <th>OrderId</th>
                    <th>Customer</th>
                    <th>Employee</th>
                    <th>Shipper</th>
                    <th>Order Date</th>
                    <th>City</th>
                    <th>Country</th>

            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-action="OrderDetail" asp-route-id="@item.OrderId">@item.OrderId</a></td>
                        <td>@item.Customer</td>
                        <td>@item.Employee</td>
                        <td>@item.Shipper</td>
                        <td>@item.OrderDate.Value.ToShortDateString()</td>
                        <td>@item.ShipCity</td>
                        <td>@item.ShipCountry</td>

                    </tr>
                }   


            </tbody>
        </table>
    </div>
</div>