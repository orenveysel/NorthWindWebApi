@model OrderInsertDTO

<div class="card">
    <div class="card-header">
        <h3>Yeni Siparis Ekrani</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="CustomerId">Musteriler</label>
               <select asp-for="CustomerId" asp-items="@Model.CustomerList">
                   <option selected>Musteri Seciniz</option>
               </select>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId">Çalisanlar</label>
                <select asp-for="EmployeeId" asp-items="@Model.EmployeeList">
                    <option selected>Çalişan  Seciniz</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ShipperId">Kargo Firmasi</label>
                <select asp-for="ShipperId" asp-items="@Model.ShipperList">
                    <option selected>Kargo  Seciniz</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>
</div>